.legend2 {
   width: 90%; 
   margin: 15px auto 0; 
}

.legend2 fieldset{ 
border: 1px solid !important;  
    
}
#mytable { 
    width: 100%;
    padding: 0;
    margin: 0;
}

th.norm {
    font: bold 11px "Trebuchet MS", Verdana, Arial, Helvetica, sans-serif;
    color: #4f6b72;
    border-right: 1px solid #C1DAD7;
    border-bottom: 1px solid #C1DAD7;
    border-top: 1px solid #C1DAD7;
    letter-spacing: 2px;
    text-transform: uppercase;
    text-align: left;
    padding: 6px 6px 6px 12px;
    background-color: #CAE8EA;
}

th.nobg {
    font: bold 11px "Trebuchet MS", Verdana, Arial, Helvetica, sans-serif;
    color: #4f6b72;
    border-top: 1px solid #C1DAD7;
    border-left: 1px solid #C1DAD7;
    border-right: 1px solid #C1DAD7;
    background: none;
    letter-spacing: 2px;
    text-transform: uppercase;
    text-align: left;
    padding: 6px 6px 6px 12px;
    background-color: #CAE8EA;
}

td.none {
    border-right: 1px solid #C1DAD7;
    border-bottom: 1px solid #C1DAD7;
    background: #fff;
    padding: 6px 6px 6px 12px;
    color: #4f6b72;
}


td.alt {
    border-right: 1px solid #C1DAD7;
    border-bottom: 1px solid #C1DAD7;
    background: #F5FAFA;
    padding: 6px 6px 6px 12px;
    color: #797268;
}

td.spec {
    border-right: 1px solid #C1DAD7;
    border-left: 1px solid #C1DAD7;
    border-top: 0;
    border-bottom: 1px solid #C1DAD7;
    background: #fff;
    color: #4f6b72;
}

td.specalt {
    border-right: 1px solid #C1DAD7;
    border-left: 1px solid #C1DAD7;
    border-top: 0;
    border-bottom: 1px solid #C1DAD7;
    background: #f5fafa;
    color: #797268;
}